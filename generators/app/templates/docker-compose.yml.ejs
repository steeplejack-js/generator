version: '3'

services:

  app:
    build:
      context: .
    ports:<% if (server === 'express') { %>
      - '3000-3010:3000-3010'<% } %>
      - '5858:5858'
      - '9999:9999'
    volumes:
      - .:/opt/app
    environment:
      - <%- envvarPrefix %>LOGGING_STREAMS_STDOUT_LEVEL=trace<% if (server === 'express') { %>
      - <%- envvarPrefix %>SERVER_DISPLAY_ERROR_DETAIL=true<% } %>
    command: npm run serve
